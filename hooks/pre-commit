#!/usr/bin/env bash
#
# An example hook script to verify what is about to be committed.
# Called by "git commit" with no arguments.  The hook should
# exit with non-zero status after issuing an appropriate message if
# it wants to stop the commit.

# Propagate failures:
set -euxo pipefail

# To enable this hook, rename this file to "pre-commit".

# Build & add generated files:
pre-commit run --all-files
make
git add dist/index.js
git add dist/index.js.map
git add dist/licenses.txt
git add dist/sourcemap-register.js
git add src/package-info/Agda.versions.json
git add src/package-info/Haskell.versions.json

# Delete 'latest' tag locally:
git tag --delete latest || true
